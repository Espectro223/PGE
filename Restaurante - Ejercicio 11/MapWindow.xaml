<Window x:Class="FoodExplorer.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mapa de Ubicación" Height="400" Width="600" ResizeMode="NoResize">

    <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Padding="10">
        <Grid>
            <!-- Título del Producto/Restaurante -->
            <TextBlock Name="MapTitle" Text="Ubicación del Restaurante" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,10"/>

            <!-- Imagen del Mapa -->
            <Image Name="MapImage" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="350" />

            <!-- Botón para Cerrar -->
            <Button Content="Cerrar" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                    Margin="0,20,0,0" Click="CloseMap_Click"/>
        </Grid>
    </Border>
</Window>
